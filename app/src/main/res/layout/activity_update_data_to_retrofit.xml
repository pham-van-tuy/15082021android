<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RetrofitAndroidKotlin.UpdateDataToRetrofit"
    android:orientation="vertical">
    <EditText
        android:layout_marginTop="20sp"
        android:id="@+id/edtIdUpdate"
        android:hint="input id"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:layout_marginTop="20sp"
        android:id="@+id/edtFirtNameUpdate"
        android:hint="input Firt name"
        android:inputType="textPersonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:layout_marginTop="20sp"
        android:id="@+id/edtLastNameUpdate"
        android:hint="input Last name"
        android:inputType="textPersonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/edtEmailUpdate"
        android:layout_marginTop="20sp"
        android:hint="input email"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btnDataUpdate"
        android:text="UPDATE"
        android:layout_gravity="center"
        android:layout_marginTop="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

</LinearLayout>